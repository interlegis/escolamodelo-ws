<p id="notice"><%= notice %></p>

<h1>Course Ratings</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>User</th>
      <th>Rating</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_ratings.each do |course_rating| %>
      <tr>
        <td><%= course_rating.course %></td>
        <td><%= course_rating.user %></td>
        <td><%= course_rating.rating %></td>
        <td><%= course_rating.observation %></td>
        <td><%= link_to 'Show', course_rating %></td>
        <td><%= link_to 'Edit', edit_course_rating_path(course_rating) %></td>
        <td><%= link_to 'Destroy', course_rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

