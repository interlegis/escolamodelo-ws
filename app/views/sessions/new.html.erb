<div class="row login">
  <div class="col s12 l12 z-depth-1">
    <h1>Log In</h1>
    <%= form_tag sessions_path, method: :post do %>
      <div class="input-field col l8 offset-l2 s12">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, required: true, autofocus: true, class: 'validate' %>
        <span class="helper-text" data-error="Email invÃ¡lido" data-success=""></span>
      </div>
      <div class="input-field col col l8 offset-l2 s12">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, required: true %>
      </div>
      <%= link_to 'Login with Google', auth_at_provider_path(:provider => :google) %>
      <%= link_to 'Login with Facebook', auth_at_provider_path(:provider => :facebook) %>
      <div class="col s12 l8 offset-l3">
        <%= button_tag 'Entrar', type: 'submit', class:'waves-effect waves-light btn' %>
        <%= link_to 'Registrar', new_user_path, class:'waves-effect waves-light btn button_bold' %>
      </div>
      <div class="row hide-on-med-and-down"></div>
    <% end %>
    <p class="right"><%= link_to "Esqueceu sua senha?", new_password_reset_path %></p>
  </div>
</div>