<%= form_with url: sessions_path, scope: :user, local: true do |f| %>
<header class="business-header bg-overlay ">
    <div class="container">
        <div class="row">
            <div class="col-lg-12  text-center align">
                <div class="t30">
                </div>
                <div class="t40">
                    <div class="card-body">
                        <div class="container">
                            <h3 class="titleProperties">LOG IN</h3>
                            <div class="d-flex justify-content-center h-100">
                                <div class="card tamanhoCard">
                                    <div class="card-body">
                                        <form>
                                            <div class="form-container-2">
                                                <lable>
                                                    <%= f.text_field :email, class: 'inputCampos',
                                                    'aria-controls': 'email-helper-text',
                                                    'aria-describedby': 'email-helper-text', placeholder: "E-Mail" %>
                                                </lable>
                                            </div>

                                            <div class="form-container-2">
                                                <label>
                                                    <%= f.password_field :password, class: 'inputCampos', placeholder: "Senha"  %>
                                                </label>
                                            </div>

                                            <p id="email-helper-text" class="mdc-text-field-helper-text mdc-text-field-helper-text--validation-msg" aria-hidden="true">
                                            Um email é necessário
                                            </p>
                                            <%= f.hidden_field :return, value: @retorno %>

                                            <div class="d-flex justify-content-center">
                                                <a href="#">Esqueceu sua senha?</a>
                                            </div>
                                            <div class="row align-items-center remember">
                                                <input type="checkbox">Lembrar
                                            </div>
                                            <div class="form-group">
                                                <%= f.submit 'Entrar', class: 'btn btn-success btn-block' %>
                                            </div>
                                            <a class="btn btn-block btn-social btn-facebook">
                                                <span class="fab fa-facebook whitef"></span>
                                                <div class="whitef">
                                                    Sign in with Facebook
                                                </div>
                                            </a>
                                            <a class="btn btn-block btn-social btn-google">
                                                <span class="fab fa-google whitef"></span>
                                                <div class="whitef">
                                                    Sign in with Google
                                                </div>
                                            </a>
                                            <hr class="two">
                                            <div class="d-flex justify-content-center links" style="margin-top: 7%;">
                                                <%= link_to 'Registrar', new_user_path, class: 'btn btn-danger btn-block' %>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
<% end %>