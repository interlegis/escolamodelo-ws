<!-- Material Design Bootstrap -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.1/css/mdb.min.css" rel="stylesheet">
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.2.1/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.7.1/js/mdb.min.js"></script>
<head>
<script src="https://www.google.com/recaptcha/api.js"> </script>
</head>


<body>


<header class="business-header bg-signin">
  <div class="container" style="margin-top: 40px;">
    <div class="row">
      <div class="col-lg-12  text-center align">
        <div>
          <div class="card-body">
            <div class="container">
              <div class="d-flex justify-content-center h-100">
                <div class="card tamanhoCardSign">
                  <div class="card-body text-color">
                      <h3 class="titleProperties">Registrar Conta</h3>
                      <%= form_for @user do |f| %>

                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :first_name, :required => true, class: 'inputCampos', placeholder: "Nome" %>
                        </label>
                    </div>

                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :last_name, :required => true, class: 'inputCampos', placeholder: "Sobrenome" %>
                        </label>
                    </div>

                    <div class="form-container-2">
                        <label>
                            <%= f.email_field :email, :required => true, class: 'inputCampos', placeholder: "E-Mail" %>
                        </label>
                    </div>

                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :cpf, 'data-mask': '000.000.000-00', :required => true, class: 'inputCampos', placeholder: "CPF" %>
                        </label>
                    </div>


                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :birth, 'data-mask': '00/00/0000', class: 'inputCampos', placeholder: "Data de Nascimento", :required => true %>
                        </label>
                    </div>

                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :phone, 'data-mask': '(00) 00000-0000', class: 'inputCampos', placeholder: "Telefone", :required => true %>
                        </label>
                    </div>

                    <div class="form-container-2">
                       <label class="inputPropertiesPhoto">
                        <%= f.file_field :avatar, placeholder: "Escolher Imagem de Perfil" %>
                        <%= f.label :avatar, '⠀', class: '' %>
                        </label>
                    </div>

                      <div class="form-container-2">
                          <%= f.password_field :password, id: "password", placeholder: "Senha", :required => true %>
                      </div>

                      <div class="form-container-2">
                        <%= f.password_field :password_confirmation, placeholder: "Confirmação de senha", :required => true %>
                        <div class="pwstrength_viewport_progress"></div>
                      </div>

                      <div class="propertiesDivCaptcha">
                        <div class="g-recaptcha" data-theme="light" data-sitekey="6Lc4HZQUAAAAAFl32T78y4ijpR8tvEEDb-0AABOL" style="transform:scale(0.77);-webkit-transform:scale(0.77);transform-origin:0 0;-webkit-transform-origin:0 0;"></div>
                      </div>
                    <div class="card-body row" style="margin: 0px !important;  padding: 0px !important;">

                      <div class="classPaddingVoltar" style="padding: 1%;">
                        <%= link_to 'Voltar', :back, class: "btn btn-primary btn-block block hoverPrimary" %>
                      </div>

                      <div class="classPaddingConcluir" style="padding: 1%;">
                        <button type="submit" name="action" type="button" class="btn btn-success btn-block block hoverSuccess">Concluir</button>
                      </div>
                    </div>
                    <% end %>
                    <div>
                      <% flash.each do |key, value| %>
                      <p style="color: red; text-align: right"><%= value %></p>

                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
</body>

