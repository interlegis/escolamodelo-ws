<header class="business-header bg-signin">
  <div class="container">
    <div class="row">
      <div class="col-lg-12  text-center align">
        <div>
          <div class="card-body">
            <div class="container">

              <div class="d-flex justify-content-center h-100">
                <div class="card tamanhoCardSign">
                  <div class="card-body text-color">
                  <h3 class="titleProperties">Atualizar Perfil</h3>
                      <%= form_for @user do |f| %>
                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :first_name, :required => true, class: 'inputCampos', placeholder: "Nome" %>
                        </label>
                    </div>

                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :last_name, :required => true, class: 'inputCampos', placeholder: "Sobrenome" %>
                        </label>
                    </div>

                    <div class="form-container-2">
                        <label>
                            <%= f.email_field :email, :required => true, class: 'inputCampos', placeholder: "E-Mail" %>
                        </label>
                    </div>

                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :cpf, 'data-mask': '000.000.000-00', :required => true, class: 'inputCampos', placeholder: "CPF" %>
                        </label>
                    </div>

                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :birth, 'data-mask': '00/00/0000', class: 'inputCampos', placeholder: "Data de Nascimento", :required => true %>
                        </label>
                    </div>

                    <div class="form-container-2">
                        <label>
                            <%= f.text_field :phone, 'data-mask': '(00) 00000-0000', class: 'inputCampos', placeholder: "Telefone", :required => true %>
                        </label>
                    </div>

                    <div class="form-container-2">
                    <label class="inputPropertiesPhoto">
                        <%= f.file_field :avatar, placeholder: "Escolher Imagem de Perfil" %>
                        <%= f.label :avatar, '⠀', class: '' %>
                        </label>
                    </div>

                      <div class="form-container-2">
                          <%= f.password_field :password, id: "Password", placeholder: "Nova Senha", class:'mb1pc' %>
                          <%= f.password_field :password_confirmation, placeholder: "Confirmação de nova senha" %>
                      </div>

                    <div class="card-body row" style="margin: 0px !important;">
                      <div class="half" style="padding: 1%">
                      <a href="/painel" class="btn btn-dangerImp btn-block block displaybck white"> Voltar</a>

                      </div>
                      <div class="half" style="padding: 1%">
                        <button type="submit" name="action" type="button" class="btn btn-successImp btn-block block displaybck white">Concluir</button>
                      </div>
                    </div>
                    <% end %>
                    <div>
                      <% flash.each do |key, value| %>
                      <p style="color: red; text-align: right"><%= value %></p>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>